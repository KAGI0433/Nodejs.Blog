<div class="author">
    <h1 class="author__heading">Lady Whistledown</h1>
    <p class="author__body">Celebrity gossip</p>
</div>

<img src="/img/brii.jpg" alt="" class="hero-image" width="981" height="528">

<section class="article">
    <h2 class="article__heading">Latest Post</h2>

    <ul class="article-ul">

         <% data.forEach(post => { %>
          
        
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString()%></span>
            </a>
        </li> 

        <% }) %>
    </ul>

    <a href="#" class="pagination">&lt; View Older Posts</a>
</section>